# Hummingbot API Configuration
HUMMINGBOT_API_URL=http://localhost:8000
HUMMINGBOT_USERNAME=admin
HUMMINGBOT_PASSWORD=admin

# Backend API Server Configuration
BACKEND_API_BASE_URL=http://localhost:8001

# MCP Server Configuration
# MCP Transport mode: stdio, streamable-http, or sse
MCP_TRANSPORT=stdio
# Server settings (used when MCP_TRANSPORT=streamable-http or sse)
MCP_HOST=127.0.0.1
MCP_PORT=8002

# SSL Configuration (for HTTPS support)
SSL_ENABLED=false
SSL_CERT_FILE=/path/to/your/certificate.pem
SSL_KEY_FILE=/path/to/your/private_key.pem
SSL_CA_FILE=/path/to/your/ca_bundle.pem
